@namespace Portfolio.Components

<div class="dots" style="display:flex; gap:6px; align-items:center;">
    @for (var i = 1; i <= Max; i++)
    {
        <span class="dot @(i <= Count ? "is-filled" : "")"></span>
    }
</div>

@code {
    [Parameter] public int Count { get; set; }
    [Parameter] public int Max { get; set; } = 5;
}